<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:orientation="vertical"
    android:background="@color/grayy">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="150dp"
        android:layout_height="150sp"
        android:layout_marginTop="70sp"
        android:layout_marginBottom="0sp"
        android:src="@drawable/login"
        android:layout_gravity="center"

        android:contentDescription="null"
        tools:ignore="HardcodedText"
        />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70sp"
        android:layout_marginBottom="20sp"
        android:layout_gravity="center"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="LOGIN"
        tools:ignore="HardcodedText"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="50dp"
        android:background="@drawable/edit_round"
        android:layout_marginRight="50dp"
        android:drawableLeft="@drawable/ic_person_black_24dp"
        android:drawableStart="@drawable/ic_person_black_24dp"
        android:drawablePadding="12dp"
        android:hint="UserName"
        android:inputType="text"
        android:textColor="@color/colorPrimaryDark"
        tools:ignore="HardcodedText,autofill"/>

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_round"
        android:drawableLeft="@drawable/ic_no_encryption_black_24dp"
        android:drawableStart="@drawable/ic_no_encryption_black_24dp"
        android:drawablePadding="12dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:inputType="textPassword"
        android:hint="Password"
        tools:ignore="HardcodedText,autofill"
        android:textColor="@color/colorPrimaryDark"
        />

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:background="@drawable/button_round"
        android:layout_marginRight="50dp"
        android:text="Login"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:backgroundTint="@color/ddgreen"
        tools:ignore="HardcodedText"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_weight="1"
            android:textSize="15dp"
            android:text="Not Registerd?"
            android:textColor="@color/black"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_weight="1"
            android:text="Forget Password"
            android:textSize="15dp"
            android:textColor="@color/black"
            tools:ignore="HardcodedText" />
    </LinearLayout>





</LinearLayout>